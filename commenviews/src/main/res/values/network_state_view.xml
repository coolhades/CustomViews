<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="empty_image" type="id" />
    <item name="empty_text" type="id" />

    <item name="error_image" type="id" />
    <item name="error_text" type="id" />

    <item name="no_network_image" type="id" />
    <item name="no_network_text" type="id" />

    <!--新增-->
    <!--无搜索结果-->
    <item name="empty_search_image" type="id"/>
    <item name="empty_search_text" type="id"/>

    <!--无购买记录-->
    <item name="empty_order_image" type="id"/>
    <item name="empty_order_text" type="id"/>

    <!--需添加-->
    <item name="needadd_image" type="id"/>
    <item name="needadd_text" type="id"/>

    <item name="refresh_view" type="id" />

    <attr name="styleNetworkStateView" format="reference" />

    <!-- 网络加载状态View -->
    <declare-styleable name="NetworkStateView">

        <!-- 加载中的布局id -->
        <attr name="loadingView" format="reference" />

        <!-- 加载错误的布局id -->
        <attr name="errorView" format="reference" />
        <!-- 加载错误的布局图片 -->
        <attr name="nsvErrorImage" format="reference" />
        <!-- 加载错误的布局文字 -->
        <attr name="nsvErrorText" format="string" />

        <!-- 没有数据的布局id -->
        <attr name="emptyView" format="reference" />
        <!-- 没有数据的布局图片 -->
        <attr name="nsvEmptyImage" format="reference" />
        <!-- 没有数据的布局文字 -->
        <attr name="nsvEmptyText" format="string" />

        <!-- 没有网络的布局id -->
        <attr name="noNetworkView" format="reference" />
        <!-- 没有数据的布局图片 -->
        <attr name="nsvNoNetworkImage" format="reference" />
        <!-- 没有数据的布局文字 -->
        <attr name="nsvNoNetworkText" format="string" />

        <!--新增-->
        <!--无搜索结果-->
        <attr name="emptySearchView" format="reference"/>
        <attr name="nsvEmptySearchImage" format="reference"/>
        <attr name="nsvEmptySearchText" format="string"/>

        <!--无搜索结果-->
        <attr name="emptyOrderView" format="reference"/>
        <attr name="nsvEmptyOrderImage" format="reference"/>
        <attr name="nsvEmptyOrderText" format="string"/>

        <!--无搜索结果-->
        <attr name="needAddView" format="reference"/>
        <attr name="nsvNeedAddImage" format="reference"/>
        <attr name="nsvNeedAddText" format="string"/>

        <!-- 刷新的ImageView图片id -->
        <attr name="nsvRefreshImage" format="reference"/>
        <attr name="nsvSetNetWorkImage" format="reference"/>
        <attr name="nsvAddThingsImage" format="reference"/>

        <!-- 文字大小 -->
        <attr name="nsvTextSize" format="dimension" />
        <!-- 文字颜色 -->
        <attr name="nsvTextColor" format="color" />
    </declare-styleable>

    <style name="NetworkStateView">

    </style>

    <!-- NetworkStateView样式 -->
    <style name="NetworkStateView.Style">
        <item name="loadingView">@layout/view_loading</item>

        <item name="errorView">@layout/view_network_error</item>
        <item name="nsvErrorImage">@mipmap/error_network</item>
        <item name="nsvErrorText">网络异常~</item>

        <item name="emptyView">@layout/view_empty</item>
        <item name="nsvEmptyImage">@mipmap/empty_content</item>
        <item name="nsvEmptyText">没有数据~</item>
        <item name="noNetworkView">@layout/view_no_network</item>
        <item name="nsvNoNetworkImage">@mipmap/error_network</item>
        <item name="nsvNoNetworkText">没有网络~</item>
        <item name="nsvRefreshImage">@mipmap/status_refresh</item>
        <item name="nsvSetNetWorkImage">@mipmap/network_set</item>
        <item name="nsvAddThingsImage">@mipmap/add_icon</item>

        <item name="emptySearchView">@layout/view_empty_search</item>
        <item name="nsvEmptySearchImage">@mipmap/empty_search_icon</item>
        <item name="nsvEmptySearchText">@string/view_empty_search</item>

        <item name="emptyOrderView">@layout/view_empty_order</item>
        <item name="nsvEmptyOrderImage">@mipmap/empty_order_icon</item>
        <item name="nsvEmptyOrderText">@string/view_empty_order</item>

        <item name="needAddView">@layout/view_needadd</item>
        <item name="nsvNeedAddImage">@mipmap/needadd_icon</item>
        <item name="nsvNeedAddText">@string/view_needadd</item>

        <item name="nsvTextSize">14sp</item>
        <item name="nsvTextColor">#8a000000</item>
    </style>

</resources>